@model BookModel 
<div class="col col-md-4">
    <div class="card mb-4 shadow">
        <div class="card-body">
            <img src="@(string.IsNullOrEmpty(Model.BookCoverUrl) ? "/images/na.png" : Model.BookCoverUrl)" class="img-thumbnail" />
            <span class="card-text">
                @Model.Title
            </span>
            <p class="card-text">
                @Model.Description
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-route="book-details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                </div>
                <small class="text-muted">@Model.Author</small>
            </div>
        </div>
    </div>
</div>